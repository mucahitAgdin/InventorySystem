@* _AdminLayout.cshtml (Modern ve Temiz) *@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventorySystem Admin</title>

    <!-- Font ve Temiz Stil -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        main {
            max-width: 400px;
            margin: auto;
            padding: 2rem;
            background: white;
            border-radius: 8px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer text-muted mt-4 text-center small">
        &copy; 2025 - InventorySystem - <a asp-controller="Home" asp-action="Privacy">Gizlilik</a>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (TempData["Success"] is string s && !string.IsNullOrWhiteSpace(s))
    {
        <div class="alert alert-success alert-dismissible fade show position-fixed end-0 top-0 m-3" role="alert">
            @s
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] is string e && !string.IsNullOrWhiteSpace(e))
    {
        <div class="alert alert-danger alert-dismissible fade show position-fixed end-0 top-0 m-3" role="alert">
            @e
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</body>
</html>
