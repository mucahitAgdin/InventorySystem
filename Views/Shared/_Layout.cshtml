@{
    var isAuthenticated = User?.Identity?.IsAuthenticated == true;
}
@using System.Globalization
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName?.ToLowerInvariant() ?? "tr";
    var back = (Context?.Request?.Path.Value ?? "/") + (Context?.Request?.QueryString.Value ?? "");
}

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventorySystem</title>

    <!-- Fontlar -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300..800&display=swap" rel="stylesheet" />

    <!-- Bootstrap (HTTPS) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="icon" type="image/x-icon" href="~/F_logo_blue.ico" />

    <!-- Uygulama CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- 🔷 Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg topbar sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Product" asp-action="AllProducts">
                    <img src="~/images/faurecia_inspiring_white.png" style="height: 80px;" alt="@Localizer["BrandAlt"]" />
                </a>

                <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="AllProducts">
                                @Localizer["Nav_AllProducts"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Create">
                                @Localizer["Nav_CreateProduct"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Stock" asp-action="Move">
                                @Localizer["Nav_StockOps"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Stock" asp-action="History">
                                @Localizer["Nav_History"]
                            </a>
                        </li>

                        <!-- 🔹 Language Switch (top-right box) -->
                        <li class="nav-item ms-lg-3">
                            <div class="lang-box">
                                <a class="lang-btn @(lang == "tr" ? "is-active" : "")"
                                   asp-controller="Language" asp-action="Set"
                                   asp-route-culture="tr" asp-route-returnUrl="@back">
                                    TR
                                </a>
                                <a class="lang-btn @(lang == "en" ? "is-active" : "")"
                                   asp-controller="Language" asp-action="Set"
                                   asp-route-culture="en" asp-route-returnUrl="@back">
                                    EN
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        <div class="content-surface">
            @RenderBody()
        </div>
    </main>

    @if (isAuthenticated)
    {
        <footer class="border-top footer text-muted mt-5 py-3 text-center small">
            &copy; 2025 - InventorySystem -
            <a asp-controller="Home" asp-action="Privacy">@Localizer["Footer_Privacy"]</a>
        </footer>
    }

    <!-- Bootstrap Bundle (HTTPS) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Uygulama JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    @* Alerts *@
    @if (TempData["Success"] is string s && !string.IsNullOrWhiteSpace(s))
    {
        <div class="alert alert-success alert-dismissible fade show position-fixed end-0 top-0 m-3" role="alert">
            @s
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] is string e && !string.IsNullOrWhiteSpace(e))
    {
        <div class="alert alert-danger alert-dismissible fade show position-fixed end-0 top-0 m-3" role="alert">
            @e
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</body>
</html>
