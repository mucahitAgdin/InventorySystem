@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var isAuthenticated = HttpContextAccessor.HttpContext.Session.GetString("IsLoggedIn") == "true";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventorySystem</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
        <!-- 🔷 Navbar (sadece login sonrası görünür) -->
        <header>
            <nav class="navbar navbar-expand-lg topbar sticky-top">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Product" asp-action="InStockOnly">
                        <img src="~/images/logo-blue.png" style="height: 60px;" />
                    </a>
                    <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="mainNav">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="InStockOnly">Depodakiler</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="AllProducts">Tüm Ürünler</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="Create">Ürün Ekle</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Stock" asp-action="Entry">Stok Girişi</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Stock" asp-action="Exit">Ürün Çıkışı</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Stock" asp-action="History">Geçmiş</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (isAuthenticated)
    {
        <footer class="border-top footer text-muted mt-5 py-3 text-center small">
            &copy; 2025 - InventorySystem - <a asp-controller="Home" asp-action="Privacy">Gizlilik</a>
        </footer>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
