@using InventorySystem.Models
@model Product
@{
    ViewData["Title"] = "Create Product";
}

<div class="form-surface mx-auto">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h4 mb-0">Create Product</h1>
        <a asp-action="All" class="btn btn-sm btn-outline-secondary">Back</a>
    </div>

    <form asp-action="Create" method="post" novalidate autocomplete="off">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

        <!-- Daha sıkı grid: g-2 ve form-control-sm -->
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Lütfen Ürün Adını Giriniz..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Barcode" class="form-label"></label>
                <input asp-for="Barcode" class="form-control" placeholder="Lütfen Ürün'e ait demirbaş etiket kodunu giriniz.'" />
                <span asp-validation-for="Barcode" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="ProductType" class="form-label"></label>
                <input asp-for="ProductType" class="form-control" placeholder="Ürün Tipi(Monitör, Laptop...)" />
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Brand" class="form-label"></label>
                <input asp-for="Brand" class="form-control" placeholder="Marka (HP,DELL...)" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Model" class="form-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="SerialNumber" class="form-label"></label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CurrentHolder" class="form-label"></label>
                <input asp-for="CurrentHolder" class="form-control" placeholder="Lütfen Ürünün Kimde olduğunu belirtiniz!!!" />
                <span asp-validation-for="CurrentHolder" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Location" class="form-label"></label>
                <input asp-for="Location" class="form-control" value="@(Model?.Location ?? "Depo")" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="2" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="DateTime" class="form-label"></label>
                <input asp-for="DateTime" class="form-control" placeholder="Tarih/Saat"
                       value="@(Model?.DateTime?.ToString("yyyy-MM-ddTHH:mm") ?? "")" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
        </div>



        <div class="d-flex gap-2 justify-content-end mt-3">
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
            <a asp-action="All" class="btn btn-outline-secondary btn-sm">Cancel</a>
        </div>
    </form>
</div>
