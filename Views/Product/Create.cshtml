@model InventorySystem.Models.Product

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<h2>🆕 Yeni Ürün Ekle</h2>

<!--
    asp-action="Create" dediğimizde, bu form submit edildiğinde
    ProductController içindeki [HttpPost] Create metoduna gider.
-->
<form asp-action="Create" method="post" autocomplete="off">

    <!-- Ürün Adı Alanı -->
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Ürün Adı</label>
        <input asp-for="Name" class="form-control" />
        <!-- asp-validation-for ile validation mesajı otomatik gösterilir -->
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Barkod Alanı -->
    <div class="mb-3">
        <label asp-for="Barcode" class="form-label">Barkod</label>
        <input asp-for="Barcode" class="form-control" />
        <span asp-validation-for="Barcode" class="text-danger"></span>
    </div>

    <!-- Stok Miktarı -->
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Stok Miktarı</label>
        <input asp-for="Quantity" type="number" min="0" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <!-- Ürün Tipi (Kategori gibi düşün) -->
    <div class="mb-3">
        <label asp-for="ProductType" class="form-label">Ürün Tipi</label>
        <input asp-for="ProductType" class="form-control" placeholder="Ör: Monitor, Kasa, Klavye..." />
        <span asp-validation-for="ProductType" class="text-danger"></span>
        <!-- Not: İleride burayı select (dropdown) yapabilirsin, şimdilik manuel -->
    </div>

    <!-- Marka Alanı -->
    <div class="mb-3">
        <label asp-for="Brand" class="form-label">Marka</label>
        <input asp-for="Brand" class="form-control" placeholder="Ör: Dell, HP, Lenovo..." />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <!-- Model Alanı -->
    <div class="mb-3">
        <label asp-for="Model" class="form-label">Model</label>
        <input asp-for="Model" class="form-control" placeholder="Ör: Latitude 5400, UltraSharp U2419H" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <!-- Seri Numarası Alanı (Her ürüne özel kimlik numarası) -->
    <div class="mb-3">
        <label asp-for="SerialNumber" class="form-label">Seri Numarası</label>
        <input asp-for="SerialNumber" class="form-control" />
        <span asp-validation-for="SerialNumber" class="text-danger"></span>
    </div>

    <!-- Açıklama/Teknik Detaylar -->
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Açıklama / Teknik Özellikler</label>
        <textarea asp-for="Description" class="form-control" rows="2" placeholder="Varsa detay özellikler..."></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Satın Alma Tarihi (Opsiyonel) -->
    <div class="mb-3">
        <label asp-for="DateTime" class="form-label">Satın Alma Tarihi</label>
        <input asp-for="DateTime" class="form-control" type="date" />
        <span asp-validation-for="DateTime" class="text-danger"></span>
    </div>

    <!-- Formu Gönderme Butonu -->
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="AllProducts" class="btn btn-secondary">İptal</a>

</form>

<!--
    NOT:
    - asp-for kullanınca modeldeki property ile otomatik bağlanır.
    - asp-validation-for ile [Required] ve diğer DataAnnotations’lar otomatik çalışır.
    - İleride ProductType ve Brand için dropdown (select) yapabilirsin, şimdi düz input.
    - Edit.cshtml de buna çok benzer, sadece asp-action="Edit" olur ve Model dolu gelir.
-->
@section Scripts {
    <!-- Validation için gerekli scriptler (otomatik include edilir genelde ama dursun) -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
