@using InventorySystem.Models
@model Product

@{
    ViewData["Title"] = "Edit Product";
    var m = Model ?? new Product();
}

<div class="form-surface">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h1 class="h4 m-0">Edit Product</h1>
        <a asp-action="All" class="btn btn-sm btn-outline-secondary">Back</a>
    </div>

    <!-- Ana form -->
    <form asp-action="Edit" method="post" novalidate autocomplete="off">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

        <div class="row g-2">
            <!-- Name (READONLY) -->
            <div class="col-12 col-md-6">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" readonly />
                <span class="form-text">Bu alan değiştirilemez.</span>
            </div>

            <!-- Barcode (READONLY) -->
            <div class="col-12 col-md-6">
                <label asp-for="Barcode" class="form-label">Barcode</label>
                <input asp-for="Barcode" class="form-control" readonly />
                <span class="form-text">Barkod değiştirilemez.</span>
            </div>

            <!-- ProductType (EDITABLE) -->
            <div class="col-12 col-md-6">
                <label asp-for="ProductType" class="form-label"></label>
                <input asp-for="ProductType" class="form-control" placeholder="Ürün Tipi (Monitör, Laptop…)" />
                <span asp-validation-for="ProductType" class="text-danger small"></span>
            </div>

            <!-- Brand (EDITABLE) -->
            <div class="col-12 col-md-6">
                <label asp-for="Brand" class="form-label"></label>
                <input asp-for="Brand" class="form-control" placeholder="Marka (HP, DELL…)" />
                <span asp-validation-for="Brand" class="text-danger small"></span>
            </div>

            <!-- Model (EDITABLE) -->
            <div class="col-12 col-md-6">
                <label asp-for="Model" class="form-label"></label>
                <input asp-for="Model" class="form-control" placeholder="Model" />
                <span asp-validation-for="Model" class="text-danger small"></span>
            </div>

            <!-- SerialNumber (EDITABLE) -->
            <div class="col-12 col-md-6">
                <label asp-for="SerialNumber" class="form-label"></label>
                <input asp-for="SerialNumber" class="form-control" placeholder="Seri No" />
                <span asp-validation-for="SerialNumber" class="text-danger small"></span>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="All" class="btn btn-outline-secondary">Cancel</a>
             </div>
        </div>
    </form>

    <!-- Ayrı DELETE formu (nested form yok!) -->
    <form asp-action="Delete" asp-route-id="@m.Id" method="post" class="mt-2"
          onsubmit="return confirm('Delete this product?');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-outline-danger">Delete</button>
    </form>
</div>
