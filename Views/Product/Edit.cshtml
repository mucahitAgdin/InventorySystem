@using InventorySystem.Models
@model Product

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["EditTitle"];
    var m = Model ?? new Product();
}

<div class="form-surface">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h1 class="h4 m-0">@Localizer["EditTitle"]</h1>
        <a asp-action="All" class="btn btn-sm btn-outline-secondary">@Localizer["Back"]</a>
    </div>

    <!-- Not: Edit POST'u [Bind] kısıtlı alan alıyor; readonly alanlar controller ile uyumlu -->
    <form asp-action="Edit" method="post" novalidate autocomplete="off">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

        <div class="row g-2">
            <!-- Name (READONLY) -->
            <div class="col-12 col-md-6">
                <label asp-for="Name" class="form-label">@Localizer["Name"]</label>
                <input asp-for="Name" class="form-control" readonly />
                <span class="form-text">@Localizer["ReadonlyNameHint"]</span>
            </div>

            <!-- Barcode (READONLY) -->
            <div class="col-12 col-md-6">
                <label asp-for="Barcode" class="form-label">@Localizer["Barcode"]</label>
                <input asp-for="Barcode" class="form-control" readonly />
                <span class="form-text">@Localizer["ReadonlyBarcodeHint"]</span>
            </div>

            <!-- ProductType (EDITABLE) -->
            <div class="col-12 col-md-6">
                <label asp-for="ProductType" class="form-label">@Localizer["Type"]</label>
                <input asp-for="ProductType" class="form-control" placeholder="@Localizer["PhType"]" />
                <span asp-validation-for="ProductType" class="text-danger small"></span>
            </div>

            <!-- Brand (EDITABLE) -->
            <div class="col-12 col-md-6">
                <label asp-for="Brand" class="form-label">@Localizer["Brand"]</label>
                <input asp-for="Brand" class="form-control" placeholder="@Localizer["PhBrand"]" />
                <span asp-validation-for="Brand" class="text-danger small"></span>
            </div>

            <!-- Model (EDITABLE) -->
            <div class="col-12 col-md-6">
                <label asp-for="Model" class="form-label">@Localizer["Model"]</label>
                <input asp-for="Model" class="form-control" placeholder="@Localizer["PhModel"]" />
                <span asp-validation-for="Model" class="text-danger small"></span>
            </div>

            <!-- SerialNumber (EDITABLE) -->
            <div class="col-12 col-md-6">
                <label asp-for="SerialNumber" class="form-label">@Localizer["Serial"]</label>
                <input asp-for="SerialNumber" class="form-control" placeholder="@Localizer["PhSerial"]" />
                <span asp-validation-for="SerialNumber" class="text-danger small"></span>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
                <a asp-action="All" class="btn btn-outline-secondary">@Localizer["Cancel"]</a>
            </div>
        </div>
    </form>

    <!-- Ayrı DELETE formu (nested form yok!) -->
    <form asp-action="Delete" asp-route-id="@m.Id" method="post" class="mt-2"
          onsubmit="return confirm('@Localizer["DeleteConfirm"]');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-outline-danger">@Localizer["Delete"]</button>
    </form>
</div>
