@using InventorySystem.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "All Products";
    var items = Model ?? Enumerable.Empty<Product>();
    string selectedType = ViewBag.SelectedProductType as string ?? "";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>

    <form method="get" class="d-flex gap-2" autocomplete="off">
        <!-- Seçilebilir + yazarken öneri: HTML5 datalist -->
        <div class="input-group">
            <input name="productType"
                   class="form-control"
                   placeholder="Type seçin veya yazın…"
                   list="typeList"
                   value="@selectedType" />
            <button type="submit" class="btn btn-primary">Filter</button>
            <a href="@Url.Action(ViewContext.RouteData.Values["action"]?.ToString(), "Product")"
               class="btn btn-outline-secondary">Clear</a>
        </div>

        <!-- Doldurulacak seçenek havuzu -->
        <datalist id="typeList"></datalist>
    </form>
</div>

@section Scripts {
    <script>
        /*
          Amaç:
          - /Product/TypesJson endpoint’inden ürün tiplerini çek.
          - <datalist id="typeList"> içine <option> olarak bas.
          - Böylece kullanıcı yazarken otomatik öneriler açılır; istenirse doğrudan tıklayıp seçer.
        */
        (function () {
            const dl = document.getElementById('typeList');
            if (!dl) return;

            fetch('@Url.Action("TypesJson", "Product")', { credentials: 'same-origin' })
                .then(r => r.ok ? r.json() : [])
                .then(types => {
                    if (!Array.isArray(types)) return;
                    // Var olanları temizle (yeniden girişlerde tekrar eklenmesin)
                    dl.innerHTML = '';
                    types.forEach(t => {
                        const opt = document.createElement('option');
                        opt.value = t;       // datalist: value üzerinden öneri yapar
                        dl.appendChild(opt);
                    });
                })
                .catch(() => { /* sessizce geç */ });
        })();
    </script>
}


<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Name</th>
            <th>Barcode</th>
            <th>In Stock</th>
            <th>Holder</th>
            <th>Location</th>
            <th>Type</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Serial</th>
            <th>Added/Updated</th>
            <th style="width:160px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in items)
        {
            <tr>
                <td>@(item?.Name ?? "-")</td>
                <td>@(item?.Barcode ?? "-")</td>
                <td>
                    @if (item?.IsInStock == true)
                    {
                        <span class="badge text-bg-success">Yes</span>
                    }
                    else
                    {

                        <span class="badge text-bg-secondary">No</span>
                    }
                </td>
                <td>@(item?.CurrentHolder ?? "-")</td>
                <td>@(item?.Location ?? "-")</td>
                <td>@(item?.ProductType ?? "-")</td>
                <td>@(item?.Brand ?? "-")</td>
                <td>@(item?.Model ?? "-")</td>
                <td>@(item?.SerialNumber ?? "-")</td>
                <td>@(item?.DateTime?.ToString("g") ?? "-")</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@(item?.Id)" class="btn btn-sm btn-outline-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@(item?.Id)" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Delete this product?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
