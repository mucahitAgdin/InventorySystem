@using InventorySystem.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "In Stock";
    var items = Model ?? Enumerable.Empty<Product>();
}

<h2>In Stock</h2>

@if (!items.Any())
{
    <div class="alert alert-info">No products in stock.</div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Barcode</th>
                <th>Qty</th>
                <th>Holder</th>
                <th>Location</th>
                <th>Type</th>
                <th>Brand</th>
                <th style="width:120px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in items)
            {
                <tr>
                    <td>@(p?.Name ?? "-")</td>
                    <td>@(p?.Barcode ?? "-")</td>
                    <td>@(p?.Quantity ?? 0)</td>
                    <td>@(p?.CurrentHolder ?? "-")</td>
                    <td>@(p?.Location ?? "-")</td>
                    <td>@(p?.ProductType ?? "-")</td>
                    <td>@(p?.Brand ?? "-")</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@(p?.Id)" class="btn btn-sm btn-outline-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
