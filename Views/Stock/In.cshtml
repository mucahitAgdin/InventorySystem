@model InventorySystem.ViewModels.StockInVm
@{
    ViewData["Title"] = "Stok Girişi";
}
<h2>Stok Girişi</h2>

<form asp-action="In" method="post" novalidate class="row g-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-4">
        <label asp-for="Barcode" class="form-label"></label>
        <input asp-for="Barcode" class="form-control" />
        <span asp-validation-for="Barcode" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="DeliveredBy" class="form-label"></label>
        <input asp-for="DeliveredBy" class="form-control" />
        <span asp-validation-for="DeliveredBy" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Note" class="form-label"></label>
        <textarea asp-for="Note" class="form-control" rows="2"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <div class="col-12 mt-2 d-flex gap-2">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-controller="Product" asp-action="InStockOnly" class="btn btn-outline-secondary">Depoya Dön</a>
    </div>
</form>
