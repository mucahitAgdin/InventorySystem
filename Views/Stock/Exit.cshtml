@model InventorySystem.Models.StockTransaction

@{
    ViewData["Title"] = "Ürün Çıkışı (Zimmetleme)";
}

<h2 class="mb-4">📤 @ViewData["Title"]</h2>

<form asp-action="Exit" method="post" class="card p-4 shadow-sm">

    <!-- Barkod -->
    <div class="form-group mb-3">
        <label asp-for="Barcode" class="form-label">Barkod</label>
        <input asp-for="Barcode" class="form-control" placeholder="Barkodu okutun..." autofocus />
        <span asp-validation-for="Barcode" class="text-danger"></span>
    </div>

    <!-- Miktar -->
    <div class="form-group mb-3">
        <label asp-for="Quantity" class="form-label">Miktar</label>
        <input asp-for="Quantity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <!-- Teslim Alan Kişi -->
    <div class="form-group mb-3">
        <label asp-for="DeliveredTo" class="form-label">Teslim Alan Kişi</label>
        <input asp-for="DeliveredTo" class="form-control" placeholder="Ad Soyad" />
        <span asp-validation-for="DeliveredTo" class="text-danger"></span>
    </div>

    <!-- Teslim Eden (admin) -->
    <div class="form-group mb-3">
        <label asp-for="DeliveredBy" class="form-label">Teslim Eden (Admin)</label>
        <input asp-for="DeliveredBy" class="form-control" placeholder="Admin Adı" />
        <span asp-validation-for="DeliveredBy" class="text-danger"></span>
    </div>

    <!-- Açıklama -->
    <div class="form-group mb-3">
        <label asp-for="Note" class="form-label">Açıklama / Not</label>
        <textarea asp-for="Note" class="form-control" rows="2"></textarea>
    </div>

    <button type="submit" class="btn btn-danger">📤 Ürünü Dışarı Çıkar</button>
    <a asp-controller="Product" asp-action="InStockOnly" class="btn btn-secondary ms-2">Vazgeç</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
