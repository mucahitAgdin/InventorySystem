@model InventorySystem.ViewModels.StockOutVm
@{
    ViewData["Title"] = "Stok Çıkışı";
}
<h2>Stok Çıkışı</h2>

<form asp-action="Out" method="post" novalidate class="row g-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-3">
        <label asp-for="Barcode" class="form-label"></label>
        <input asp-for="Barcode" class="form-control" />
        <span asp-validation-for="Barcode" class="text-danger"></span>
    </div>
    <div class="col-md-2">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="DeliveredTo" class="form-label"></label>
        <input asp-for="DeliveredTo" class="form-control" />
        <span asp-validation-for="DeliveredTo" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="DeliveredBy" class="form-label"></label>
        <input asp-for="DeliveredBy" class="form-control" />
        <span asp-validation-for="DeliveredBy" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Note" class="form-label"></label>
        <textarea asp-for="Note" class="form-control" rows="2"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <div class="col-12 mt-2 d-flex gap-2">
        <button type="submit" class="btn btn-danger">Kaydet</button>
        <a asp-controller="Product" asp-action="All" class="btn btn-outline-secondary">Ürün Listesi</a>
    </div>
</form>
